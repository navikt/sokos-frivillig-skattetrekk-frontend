{
	"name": "sokos-frivillig-skattetrekk-frontend",
	"version": "1.0.0",
	"description": "Frontend for frivillig skattetrekk for skattepliktige ytelser",
	"type": "module",
	"scripts": {
		"dev": "vite --mode mock",
		"dev:backend": "vite --port 3000",
		"build:development": "tsc && vite build --mode development",
		"build:production": "tsc && vite build --mode production",
		"biome:check": "biome check --files-ignore-unknown=true",
		"biome:fix": "biome check --write --no-errors-on-unmatched",
		"stylelint:check": "stylelint '**/*.css'",
		"stylelint:fix": "stylelint '**/*.css' --fix",
		"prepare": "husky"
	},
	"dependencies": {
		"react-router-dom": "^7.12.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@navikt/aksel-icons": "^7.38.0",
		"@navikt/aksel-stylelint": "^7.38.0",
		"@navikt/ds-css": "^7.38.0",
		"@navikt/ds-react": "^7.38.0",
		"@navikt/ds-tokens": "^7.38.0",
		"@navikt/nav-dekoratoren-moduler": "^3.6.1",
		"@types/node": "^25.0.9",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"autoprefixer": "^10.4.23",
		"date-fns": "^4.1.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"lint-staged": "^16.2.7",
		"msw": "^2.12.7",
		"postcss": "^8.5.6",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"stylelint": "^16.26.1",
		"stylelint-config-standard": "^39.0.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-environment": "^1.1.3"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"@navikt/aksel-stylelint/recommended"
		],
		"rules": {
			"aksel/design-token-no-global-override": [
				true,
				{
					"severity": "warning"
				}
			],
			"selector-class-pattern": null
		},
		"ignoreFiles": [
			"dist/**/*",
			"playwright-report/**/*"
		]
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": "biome check --write --no-errors-on-unmatched",
		"*.css": "stylelint --fix"
	},
	"engines": {
		"pnpm": ">=10.16.0",
		"node": ">=24.13.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"msw",
			"protobufjs"
		]
	}
}
